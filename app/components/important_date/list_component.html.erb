<h2 class="mt-3">Promemoria</h2>
<div class="accordion" id="dates_accordion">
  <% @dates.each do |date| %>
    <div class="accordion-item">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= date.id %>" aria-expanded="false" aria-controls="collapse<%= date.id %>">
          <strong class="pe-2"><%= I18n.l date.date %></strong>
          <%= date.name %>
          <%= date.date_type %>
        </button>
      </h2>
      <div id="collapse<%= date.id %>" class="accordion-collapse collapse" aria-labelledby="heading<%= date.id %>" data-bs-parent="#dates_accordion">
        <div class="my-2">
          <%= date.description %>
        </div>
        <div class="text-end my-2">
          <%= link_to_edit "modifica", [:edit, date] if @editable %>
        </div>
      </div>
    </div>
  <% end %>
    <% if @with_new %>
      <%= link_to "Aggiungi promemoria", [:new, @parent, :important_date], class: "mt-2 btn btn-primary" %>
    <% end %>
</div>
