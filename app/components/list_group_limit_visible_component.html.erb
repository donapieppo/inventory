<div data-controller="limit-visible" data-limit-visible-substring-value="true">
  <div class="centered my-4 px-4">
    <input class="form-control text" placeholder="<%= @placeholder %>" type="text" data-action="input->limit-visible#update"></input>
  </div>

  <div class="list-group">
    <% @list.each do |item| %>
      <%= link_to item, class: "list-group-item list-group-item-actions", data: {"limit-visible-target" => "item", text: item.send(@method)} do %>
        <%= item.send(@method) %>
      <% end %>
    <% end %>
  </div>
</div>


