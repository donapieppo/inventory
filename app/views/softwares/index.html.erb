<h1>Servizi</h1>

<%= render ListGroupLimitVisibleComponent.new(placeholder: "Scrivi parte del nome del servizio") do %>
  <% @softwares.each do |item| %>
    <%= link_to item, class: "list-group-item list-group-item-actions", data: {"limit-visible-target" => "item", text: item.name, turbo_frame: 'modal'} do %>
      <%= item.name %>
    <% end %>
  <% end %>
<% end %>
