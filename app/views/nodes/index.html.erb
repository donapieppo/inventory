<h1>Nodes</h1>

<%= link_to "all", nodes_path %> -
<%= link_to "ubuntu <= 16", nodes_path(os: "ubuntu", os_version: "16.04") %>
<%= link_to "ubuntu <= 20", nodes_path(os: "ubuntu", os_version: "20.04") %>

<%= render ListGroupLimitVisibleComponent.new(placeholder: "Scrivi parte del nome del nodo") do %>
  <% @nodes.each do |item| %>
    <%= link_to item, class: "list-group-item list-group-item-actions", data: {"limit-visible-target" => "item", text: item.name} do %>
      <%= item.name %> <span class="small float-end"><%= item.operatingsystem %> <%= item.operatingsystemrelease %></span>
    <% end %>
  <% end %>
<% end %>

