<h1>
  <%= @node.name %>
  <%= link_to_edit("", [:edit, @node]) if policy(@node).edit? %>
</h1>

<% unless @node.notes.blank? %>
  <div class="info"><%= @node.notes %></div>
<% end %>

<dl class="dl-horizontal">
  <dt>Progetti</dt>  
  <dd>
    <% @node.role.projects.each do |p| %>
      <%= link_to p.name, p, class: "btn btn-success" %>
    <% end %>
  </dd>
  <dt>Ruolo</dt>
  <dd><%= link_to @node.role.to_s.upcase, @node.role %></dd>
  <dt>Amm</dt>
  <dd>
    <% @node.role.ad_groups.each do |adg| %>
      <%= link_to adg, adg %><br/>
    <% end %>
  </dd>
  <dt>Servizi</dt>
  <dd>
    <% @node.node_services.order(:software_id, :port).each do |service| %>
      <strong><%= service.software %></strong> on port <%= service.port %> <br/>
    <% end %>
  </dd>
  <dt>Siti web</dt>
  <dd>
    <% @node.web_sites.each do |ws| %>
      <%= link_to ws, ws.url %><br/>
    <% end %>
  </dd>
  <dt>IP</dt>
  <dd>
    <% @node.node_ips.each do |node_ip| %>
      <strong><%= node_ip.ip %></strong> <br/>
    <% end %>
  </dd>

  <% [:operatingsystem, :operatingsystemrelease, :kernelversion, :processorcount, :memorysize, :datacenter_zone].each do |att| %>
    <dt><%= att %></dt>
    <dd><%= @node.send(att) %>
  <% end %>
</dl>

<dl class="dl-horizontal">
  <dt>Logins</dt>
  <dd><%= render SshLogin::ListComponent.new(@node.ssh_logins.order("numbers desc"), show: :user) %></dd>
</dl>

<dl class="dl-horizontal">
  <dt>Zabbix</dt>
  <dd><%= link_to "visita la pagina di zabbix per questo nodo", @node.zabbix_page %></dd>
</dl>

<div class="alert alert-secondary">
  <% if File.exist?(@node.data_file) %>
    <pre>
      <%= raw File.open(@node.data_file).read %>
    </pre>
  <% else %>
    No file <i><%= @node.data_file %></i>.
  <% end %>
</div>

<%= link_to "http://puppet8-board.unibo.it", "http://puppet8-board.unibo.it/node/#{@node.name}", class: "btn btn-primary" %>

