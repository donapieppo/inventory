<h1>Siti web</h1>

<%= render ListGroupLimitVisibleComponent.new(placeholder: "Scrivi parte del nome del sito") do %>
  <% @web_sites.each do |item| %>
    <%= link_to item, class: "list-group-item list-group-item-actions", data: {"limit-visible-target" => "item", text: item.name, turbo_frame: :modal} do %>
      <%= item.name %>
      <span class="float-end badge bg-<%= web_site_state_color(item) %>"><%= item.state %></span>
    <% end %>
  <% end %>
<% end %>
