<%= render DmUniboCommon::ModalComponent.new() do %>
  <h1 class="text-center display-6">
    <%= link_to dm_icon("link", text: @web_site.name), "https://#{@web_site.name}" %>
  </h1>

  <dl class="dl-horizontal">
    <dt>Stato:</dt>
    <dd><%= @web_site.state %></dd>
    <dt>Requests:</dt>
    <dd><%= @web_site.requests %></dd>
  </dl>

  <h2>Nodi</h2>

  <ul>
    <% @web_site.web_site_addresses.each do |address| %>
      <li>
        <% if node_ip = NodeIp.where(ip: address.ip).first %>
          <%= link_to node_ip.node %>
        <% end %>
        (<%= address.ip_to_s %>:<%= address.port %>)
      </li>
    <% end %>
  </ul>
<% end %>
