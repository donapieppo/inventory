<h1>Progetti</h1>

<% if policy(:project).new? %>
  <div class="text-end my-2">
    <%= link_to "Crea nuovo progetto", new_project_path, class: "btn btn-primary" %>
  </div>
<% end %>

<div>
  <% @projects.each do |project| %>
    <%= link_to project, class: "link-underline link-underline-opacity-0" do %>
      <div class="card text-bg-light mb-1">
        <div class="card-header fw-bold">
          <%= project.name %>
        </div>
        <div class="card-body small">
          <%= project.description %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

